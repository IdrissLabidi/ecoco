{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        {% for product in products %}
            <div class="col-sm-4">
                <div class="card mt-4">
                    <img src=" ./uploads/{{ product.image }}" class="card-img-top" alt="{{ product.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        {% set price = product.price %}
                        {% set euros = price|slice(0, -2) %}
                        {% set cents = price|slice(-2) %}
                        <p class="card-text"><strong>Prix: </strong>{{ euros ~ ',' ~ cents }} â‚¬</p>
                        <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-primary">Voir le produit</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-sm-12">
                <p>No products found.</p>
            </div>
        {% endfor %}
    </div>
    <div class="pagination mt-3">
        {{ knp_pagination_render(products) }}
    </div>
</div>
{% endblock %}
